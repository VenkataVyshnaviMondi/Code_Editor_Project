/* Ensure the body takes up the full height of the viewport */
body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    box-sizing: border-box;
}

/* Editor container takes full width and height */
.editor-container {
    width: 90%;
    max-width: 1200px;
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    height: 90vh;
}

/* Heading stays at the top */
h1 {
    text-align: center;
    margin-bottom: 10px;
}

/* Flexbox to divide the area for text editor and output */
textarea {
    width: 100%;
    resize: none; /* Disable resizing */
    margin: 10px 0;
    padding: 10px;
    font-family: monospace;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 5px;
    height: calc(25% - 20px); /* Adjust textarea height */
    box-sizing: border-box;
}

button {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #28a745;
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    margin: 10px 0;
}

button:hover {
    background-color: #218838;
}

/* Ensure iframe output also fits well */
iframe {
    width: 100%;
    height: calc(40% - 20px); /* Adjust iframe height */
    border: 1px solid #ccc;
    margin-top: 10px;
    box-sizing: border-box;
}

/* Add responsiveness to the text area and iframe on smaller screens */
@media (max-width: 768px) {
    textarea, iframe {
        height: calc(20% - 10px);
    }
}
